{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "annotations": {
            "description": "This template provides a distributed Redis Sentinel cluster. The data is stored on persistent storage. Note that when deployment is completed, the Redis Sentinel cluster is actually not fully up and running. You need to wait for a short while and attempt to login redis via cli by the ingress port exposed by service redis-sentinel-ingress.",
            "iconClass": "icon-redis",
            "openshift.io/display-name": "Redis Sentinel Cluster (Persistent)",
            "tags": "database,redis",
            "template.openshift.io/provider-display-name": "jmetzz"
        },
        "name": "redis-sentinel"
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "redis-sentinel",
                "annotations": {
                    "openshift.io/image.insecureRepository": "true"
                },
                "labels": {
                    "template": "redis-sentinel"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                },
                "tags": [
                    {
                        "name": "${REDIS_SENTINEL_TAG}",
                        "annotations": null,
                        "from": {
                            "kind": "DockerImage",
                            "name": "${REDIS_SENTINEL_IMAGE}:${REDIS_SENTINEL_TAG}"
                        },
                        "importPolicy": {
                            "insecure": true
                        },
                        "referencePolicy": {
                            "type": "Source"
                        }
                    }
                ]
            }
        },
        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "redis-master",
                "labels": {
                    "name": "redis-master",
                    "redis-sentinel": "true",
                    "role": "master"
                },
                "annotations": {
                    "openshift.io/scc": "restricted",
                    "template.alpha.openshift.io/wait-for-ready": "true"
                }
            },
            "spec": {
                "volumes": [
                    {
                        "name": "data",
                        "emptyDir": {}
                    }
                ],
                "containers": [
                    {
                        "name": "redis-master",
                        "image": "${REDIS_SENTINEL_IMAGE}:${REDIS_SENTINEL_TAG}",
                        "imagePullPolicy": "IfNotPresent",
                        "ports": [
                            {
                                "containerPort": 6379,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                            {
                                "name": "MASTER",
                                "value": "true"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "100m"
                            },
                            "requests": {
                                "cpu": "100m"
                            }
                        },
                        "volumeMounts": [
                            {
                                "name": "data",
                                "mountPath": "/redis-master-data"
                            }
                        ],
                        "terminationMessagePath": "/dev/termination-log",
                        "terminationMessagePolicy": "File"
                    },
                    {
                        "name": "sentinel",
                        "image": "${REDIS_SENTINEL_IMAGE}:${REDIS_SENTINEL_TAG}",
                        "imagePullPolicy": "IfNotPresent",
                        "ports": [
                            {
                                "containerPort": 26379,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                            {
                                "name": "SENTINEL",
                                "value": "true"
                            }
                        ],
                        "resources": {},
                        "volumeMounts": [
                            {
                                "name": "data",
                                "mountPath": "/redis-sentinel-data"
                            }
                        ],
                        "terminationMessagePath": "/dev/termination-log",
                        "terminationMessagePolicy": "File"
                    }
                ],
                "restartPolicy": "Always",
                "dnsPolicy": "ClusterFirst"
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "redis-replicas",
                "annotations": {
                    "template.alpha.openshift.io/wait-for-ready": "true"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "redis-replicas",
                                "redis-sentinel"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "redis-sentinel:${REDIS_SENTINEL_TAG}"
                            }
                        }
                    }
                ],
                "replicas": 3,
                "test": false,
                "selector": {
                    "name": "redis-replicas"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "name": "redis-replicas",
                            "redis-sentinel": "true"
                        }
                    },
                    "spec": {
                        "volumes": [
                            {
                                "name": "redis-data",
                                "emptyDir": {}
                            },
                            {
                                "name": "redis-sentinel-data",
                                "emptyDir": {}
                            }
                        ],
                        "containers": [
                            {
                                "name": "redis-replicas",
                                "image": " ",
                                "imagePullPolicy": "IfNotPresent",
                                "ports": [
                                    {
                                        "containerPort": 6379,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {},
                                "volumeMounts": [
                                    {
                                        "name": "redis-data",
                                        "mountPath": "/redis-master-data"
                                    }
                                ]
                            },
                            {
                                "name": "redis-sentinel",
                                "image": " ",
                                "imagePullPolicy": "IfNotPresent",
                                "ports": [
                                    {
                                        "containerPort": 26379,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "SENTINEL",
                                        "value": "true"
                                    }
                                ],
                                "resources": {},
                                "volumeMounts": [
                                    {
                                        "name": "redis-sentinel-data",
                                        "mountPath": "/redis-sentinel-data"
                                    }
                                ]
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {},
                        "schedulerName": "default-scheduler"
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "redis",
                "creationTimestamp": null,
                "labels": {
                    "name": "redis",
                    "role": "service"
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 6379,
                        "targetPort": 6379
                    }
                ],
                "selector": {
                    "name": "redis-master"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "redis-sentinel",
                "creationTimestamp": null,
                "labels": {
                    "name": "sentinel",
                    "role": "service"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "sentinel",
                        "protocol": "TCP",
                        "port": 26379,
                        "targetPort": 26379
                    }
                ],
                "selector": {
                    "redis-sentinel": "true"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "redis-ingress"
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 6379,
                        "targetPort": 6379
                    }
                ],
                "selector": {
                    "name": "redis-master"
                },
                "type": "LoadBalancer",
                "sessionAffinity": "None"
            }
        }
    ],
    "parameters": [
        {
            "description": "Redis Sentinel docker image reference",
            "displayName": "Redis Docker Image Ref",
            "name": "REDIS_SENTINEL_IMAGE",
            "required": true,
            "value": "jmetzz/redis-sentinel"
        },
        {
            "description": "Redis Sentinel docker image tag",
            "displayName": "Redis Docker Image Tag",
            "name": "REDIS_SENTINEL_TAG",
            "required": true,
            "value": "latest"
        }
    ]
}
